---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "../layouts/BlogPost.astro";

export async function getStaticPaths() {
    const blogPosts = await getCollection("blog");
    const monthlyPosts = await getCollection("monthly");
    const tilPosts = await getCollection("til");
    const posts = [...blogPosts, ...monthlyPosts, ...tilPosts];
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
type BlogEntry = CollectionEntry<"blog"> | CollectionEntry<"monthly"> | CollectionEntry<"til">;
type Props = BlogEntry;

const post = Astro.props;
const { Content, headings } = await render(post);
---

<BlogPost {...post.data} body={post.body} headings={headings}>
	<Content />
</BlogPost>
