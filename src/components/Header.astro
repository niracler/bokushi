---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-[var(--color-bg-page)] shadow-sm">
	<nav class="mx-auto flex w-full max-w-3xl items-center justify-between gap-4 px-4 py-3">
		<h2 class="text-sm font-semibold text-[var(--color-text-secondary)]">
			<a href="/" class="transition-colors hover:text-[var(--color-accent)]">{SITE_TITLE}</a>
		</h2>
		<div class="flex gap-1 sm:gap-2">
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/blog">文章</HeaderLink>
			<HeaderLink href="/tags">标签</HeaderLink>
		</div>
	</nav>
	<link
    rel="alternate"
    type="application/rss+xml"
		title="Niracler's 博物志"
		href={new URL('rss.xml', Astro.site)}
	/>
</header>
