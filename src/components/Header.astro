---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header class="bg-[var(--color-bg-surface)] border-b border-[var(--color-border)]">
	<nav class="mx-auto flex w-full max-w-4xl items-center justify-between gap-6 px-5 py-3 sm:px-6">
		<h2 class="text-[1.05rem] font-semibold tracking-tight text-[var(--color-text-primary)] sm:text-[1.1rem]">
			<a href="/" class="transition-colors hover:text-[var(--color-accent)] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-accent-soft)]">
				{SITE_TITLE}
			</a>
		</h2>
		<div class="flex items-center gap-2 sm:gap-3">
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/blog">文章</HeaderLink>
			<HeaderLink href="/tags">标签</HeaderLink>
		</div>
	</nav>
	<link
    rel="alternate"
    type="application/rss+xml"
		title="Niracler's 博物志"
		href={new URL('rss.xml', Astro.site)}
	/>
</header>
