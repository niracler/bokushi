---
interface Props {
    date: Date;
}

const { date } = Astro.props;
const isValidDate = date && !Number.isNaN(date.valueOf());
---

{
    isValidDate && (
        <time datetime={date.toISOString()}>
            {date.toLocaleDateString("en-us", {
                year: "numeric",
                month: "short",
                day: "numeric",
            })}
        </time>
    )
}
