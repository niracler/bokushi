---
interface Props {
    title: string;
    description: string;
    avatar: string;
    username: string;
}

const { title, description, avatar, username } = Astro.props;
---

<header class="channel-header surface-card surface-card--soft">
    <img src={avatar} alt={title} class="channel-header__avatar" />
    <div class="channel-header__info">
        <h1 class="channel-header__title">{title}</h1>
        {description && (
            <p class="channel-header__description" set:html={description} />
        )}
    </div>
    <div class="channel-header__actions">
        <a href={`https://t.me/${username}`}
           target="_blank"
           rel="noopener noreferrer"
           class="channel-header__btn channel-header__btn--primary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Telegram
        </a>
        <a href="/channel-rss.xml"
           class="channel-header__btn channel-header__btn--ghost">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 11a9 9 0 0 1 9 9M4 4a16 16 0 0 1 16 16" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="5" cy="19" r="1" fill="currentColor"/>
            </svg>
            RSS
        </a>
    </div>
</header>

<style>
.channel-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    margin-bottom: var(--space-6);
}

.channel-header__avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    flex-shrink: 0;
    object-fit: cover;
}

.channel-header__info {
    flex: 1;
    min-width: 0;
}

.channel-header__title {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
}

.channel-header__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: var(--space-1) 0 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
}

.channel-header__actions {
    display: flex;
    gap: var(--space-2);
    flex-shrink: 0;
}

.channel-header__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
}

.channel-header__btn--primary {
    background: var(--color-accent);
    color: white;
}

.channel-header__btn--primary:hover {
    background: var(--color-accent-dark);
}

.channel-header__btn--ghost {
    background: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
}

.channel-header__btn--ghost:hover {
    background: var(--color-accent);
    color: white;
}

@media (max-width: 640px) {
    .channel-header {
        flex-direction: column;
        text-align: center;
    }

    .channel-header__description {
        -webkit-line-clamp: 3;
    }

    .channel-header__actions {
        width: 100%;
        flex-direction: column;
    }

    .channel-header__btn {
        justify-content: center;
    }
}
</style>
